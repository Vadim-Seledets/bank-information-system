{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Server - front",
      "type": "shell",
      "command": "npm run webpack-start",
      "options": {
        "cwd": "${workspaceFolder}/source/front"
      },
      "problemMatcher": ["$tsc", "$eslint-stylish"],
      "isBackground": true,
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "Start Server - back",
      "type": "process",
      "command": "dotnet",
      "args": [
        "run",
        "--configuration",
        "Release",
        "--project",
        "${workspaceFolder}/source/back/BankInformationSystem/BankInformationSystem.csproj"
      ],
      "problemMatcher": ["$msCompile"],
      "group": "build"
    },
    {
      "label": "Build server - back",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "--configuration",
        "Release",
        "${workspaceFolder}/source/back/BankInformationSystem.sln"
      ],
      "problemMatcher": ["$msCompile"],
      "group": "build"
    },
    {
      "label": "Build All - tsc & eslint",
      "type": "shell",
      "command": "npm run build",
      "options": {
        "cwd": "${workspaceFolder}/source/front"
      },
      "problemMatcher": ["$tsc", "$eslint-stylish"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "Install Modules - npm",
      "type": "shell",
      "command": "npm install",
      "options": {
        "cwd": "${workspaceFolder}/source/front"
      },
      "isBackground": true,
      "group": "build",
      "problemMatcher": [],
      "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": true,
          "panel": "shared"
      }
    },
    {
      "label": "Publish",
      "type": "shell",
      "command": "npm run publish",
      "options": {
        "cwd": "${workspaceFolder}/source/front"
      },
      "isBackground": true,
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc", "$eslint-stylish"]
    },
    {
      "label": "Fix Rules - eslint",
      "type": "shell",
      "command": "npm run fix",
      "options": {
        "cwd": "${workspaceFolder}/source/front"
      },
      "problemMatcher": ["$tsc", "$eslint-stylish"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    }
  ]
}
