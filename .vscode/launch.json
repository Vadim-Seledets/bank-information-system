{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/source/front/server.js",
      "sourceMaps": true,
      "skipFiles": [
        "${workspaceFolder}/source/front/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ]
    },
    {
      "name": "Launch Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3333",
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}/source/front",
      "skipFiles": [
        "${workspaceFolder}/source/front/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ]
    },
    {
      "name": "Attach to Chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/source/front",
      "skipFiles": [
        "${workspaceFolder}/source/front/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ]
    }
  ]
}
